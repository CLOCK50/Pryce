<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="@drawable/list_item_bg"
    android:padding="6dip">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/product_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="9dp"
        android:src="@drawable/temp_circle" />

    <com.clock50.pryce.UI.other.HelveticaTextView
        android:id="@+id/list_item_text_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/product_image"
        android:ellipsize="end"
        android:lines="1"
        android:scrollHorizontally="true"
        android:text="Product Name"
        android:textColor="#212121"
        android:textSize="18sp" />

    <com.clock50.pryce.UI.other.HelveticaTextView
        android:id="@+id/list_item_text_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/product_image"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:text="TARGET: $19.99"
        android:textColor="#212121"
        android:textSize="12sp" />

    <com.clock50.pryce.UI.other.HelveticaTextView
        android:id="@+id/list_item_text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/list_item_text_name"
        android:layout_alignBottom="@+id/list_item_text_name"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:text="$19.99"
        android:textColor="#e10000"
        android:textSize="30sp" />

</RelativeLayout>